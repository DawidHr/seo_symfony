{% extends 'base.html.twig' %}
{% block body %}

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/sites">Strony</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/changes">Zamiany</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/logout">Wyloguj</a>
  </li>
</ul>
<br><br>

<center><h1>{{ site.name }}</h1></center>
<div>
<table>
    <tr>
        <td>Firma:</td>
        <td>{{ site.name }}</td>
    </tr>
    <tr>
        <td>Adres url:</td>
        <td>{{ site.url }}</td>
    </tr>
    <tr>
        <td>Mail: </td>
        <td>{{ site.mail }}</td>
    </tr>
</table>
</div>
<div style="width: 1200px; margin: 0 auto;">
<h2 style="margin: 20px auto; text-align: center;">Lista miesiÄ™cy pozycjonowanych: </h2>
<table class="table table-striped" style="width: 75%;">
{% for change in changes %}
<tr>
    <td>{{ change.SiteId.name }}</td>
    <td>{{ change.changeDate |date("m/d/Y") }}</td>
    <td><a href="/sitechanges/{{ change.SiteChangesId }}">Przejdz</a></td>
    <td><a href="/sites/delete/{{ change.SiteChangesId }}">Kasuj</a></td>
</tr>
{% endfor %}
</table>
<a href="/sitechanges/{{ site.name }}/add" type="button" class="btn btn-primary btn-lg">Dodaj Nowy Okres</a>


</div>
{% endblock %}